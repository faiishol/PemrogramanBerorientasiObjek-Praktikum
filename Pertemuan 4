        int nilai[][] = {{90, 75, 80}, 
                         {80, 90, 90}, 
                         {70, 75, 95}};
        for(int i[]: nilai){
            for(int j : i){
                System.out.println(j);
            }
        }
                                                   //MANIPULASI NILAI ARRAY MULTIDIMENSI
        nilai[0][1] = 73;
        System.out.println("Nilai setelah diganti: ");
        for (int i[] : nilai){                     //OUTPUT BERBENTUK MATRIX
            for(int j : i){
                System.out.print(j + ", ");        
            }
            System.out.println(" ");
        }
    }   
}
