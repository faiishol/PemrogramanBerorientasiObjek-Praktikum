import java.util.Scanner;

public class FaisholFitraMahdi_Praktikum4{
    public static void main(String[] args){
        /*
        int number[] = {1, 3, 5, 7, 9};             INISIALISASI ARRAY
        for(int i=0; i<number.length; i++){         LOOP YANG TIDAK DIKETAHUI JUMLAH INDEXNYA       
            System.out.println(number[i]);
